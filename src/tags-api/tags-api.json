  "servers": [
    {
      "url": "https://virtserver.swaggerhub.com/aksenovdev/tags/1.0.0",
      "description": "SwaggerHub API Auto Mocking"
    }
  ],
  "paths": {
    "/holder/{holderRepositoryKey}": {
      "get": {
        "summary": "Find TagHolder by id",
        "description": "Returns a single TagsHolder",
        "operationId": "getHolderById",
        "parameters": [
          {
            "name": "holderRepositoryKey",
            "in": "path",
            "description": "ID of TagsHolder to return",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TagsHolder"
                }
              }
            }
          },
          "404": {
            "description": "TagHolder not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Tag": {
        "required": [
          "value"
        ],
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "example": "funny"
          },
          "holders": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TagsHolder"
            }
          }
        }
      },
      "TagsHolder": {
        "required": [
          "repositoryKey"
        ],
        "type": "object",
        "properties": {
          "repositoryKey": {
            "type": "string",
            "example": "aksenovdev_gh-star-tags"
          },
          "repositoryLink": {
            "type": "string",
            "example": "https://github.com/aksenovdev/gh-star-tags"
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          }
        }
      }
    }
  }
}
